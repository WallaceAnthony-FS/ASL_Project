<form method="POST" action="/variants/{% if variant.id %}{{variant.id}}{% endif %}">
{% if variant.id %}
    <h2>Edit</h2>
{% else %}
    <h2>Create</h2>
{% endif %}
    <div>
        <label>Title: 
            <input type="text" name="title" value="{{variant.title}}">
        </label>
    </div>
    <div>
        <label>Price: 
            <input type="number" name="price" value="{{variant.price}}" min="0" step="0.01" />
        </label>
    </div>
    <div>
        <label>
            Product:
            <select name="productId">
                {% for product in products %}
                    <option value="{{product.id}}">{{product.title}}</option>
                {% endfor %}
            </select>
        </label>
    </div>
    <div>
        <input type="submit" value="Submit">
    </div>
</form>