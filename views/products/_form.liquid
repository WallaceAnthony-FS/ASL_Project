<form method="POST" action="/products/{% if product.id %}{{product.id}}{% endif %}">
{% if product.id %}
    <h2>Edit</h2>
{% else %}
    <h2>Create</h2>
{% endif %}
    <div>
        <label>Title: 
            <input type="text" name="title" value="{{product.title}}">
        </label>
    </div>
    <div>
        <label>Slug: 
            <input type="text" name="slug" value="{{product.slug}}">
        </label>
    </div>
    <div>
        <label>Description: 
            <textarea type="text" name="title" value="{{product.description}}"></textarea>
        </label>
    </div>
    <div>
        <label>Price: 
            <input type="number" name="price" value="{{product.price}}" min="0" step="0.01" />
        </label>
    </div>
    <div>
        <label>Published: 
            <select id="isPublished">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </label>
    </div>
    <div>
        <input type="submit" value="Submit">
    </div>
</form>